
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Use custom claims for role checks. This is faster and more secure.
      return isSignedIn() && request.auth.token.role == 'admin';
    }

    // --- Publicly Readable Data ---

    // COURSES: Publicly readable for the course catalog.
    // Anyone can view the list of courses and individual course details.
    // Only admins can create, update, or delete courses.
    match /courses/{courseId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /instructors/{instructorId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /categories/{categoryId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /heroItems/{itemId} {
      allow get, list: if true;
      // Write access should be restricted to administrators.
      allow create, update, delete: if isAdmin();
    }

    match /sponsor_logos/{logoId} {
      allow get, list: if true;
      // Write access should be restricted to administrators.
      allow create, update, delete: if isAdmin();
    }

    match /website_settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /practitioners/{practitionerId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /alumniTestimonials/{testimonialId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // --- User-Specific Data ---

    match /users/{userId} {
      // An admin can get any user's profile. A user can only get their own.
      allow get: if isAdmin() || isOwner(userId);
      
      // Allow signed-in users to list other users to find an admin.
      // In a production app with many users, this should be more restrictive.
      allow list: if isSignedIn();
      
      // A user can create their own profile document.
      allow create: if isOwner(userId);
      
      // An owner can update their own doc. An admin can update any user's doc
      // (e.g., to change their role).
      allow update: if isAdmin() || isOwner(userId);
      
      // Deletion should be a privileged, server-side operation, not exposed to clients.
      allow delete: if false; 
    }

    match /transactions/{transactionId} {
      // An admin can get any transaction. A user can only get their own.
      // This rule uses resource.data to check ownership, which is secure for `get`.
      allow get: if isSignedIn() && (isAdmin() || (resource.data.userId != null && isOwner(resource.data.userId)));
      // Listing all transactions is disallowed for privacy and performance.
      allow list: if false;
      // A user can create a transaction for themselves.
      // This rule uses request.resource.data for `create`.
      allow create: if isSignedIn() && request.resource.data.userId != null && isOwner(request.resource.data.userId);
      // Transactions are immutable from the client-side.
      allow update, delete: if false;
    }
  }
}
